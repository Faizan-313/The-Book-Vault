<body class="add">
    <%- include("../partials/header.ejs", { show: show }) %>
    <div id="add-loading" class="loading" style="display: none;">
        <div class="spinner"></div>
    </div>
    <div class="container" >
        <form action="/new/addBook" method="post" id="addBookForm">
            <label for="name">Book Name  <span style="color: red;">*</span></label>
            <input type="text" name="name" id="name" autofocus autocomplete="off" placeholder="Enter Book Name" required>

            <label for="ratings">Your Rating <span style="color: red;">*</span></label>
            <input type="number" name="ratings" id="rattings" step="0.1" min="1" max="10" autocomplete="off" required placeholder="Give your rating 1-10">

            <label for="isbn">ISBN</label>
            <input type="text" name="isbn" id="isbn" autocomplete="off" placeholder="ISBN">

            <label for="description">Your Thought</label>
            <textarea name="discription" id="description" placeholder="Your Thought" autocomplete="off"></textarea>

            <input type="submit" id="submit" value="Add">
        </form>
    </div>
    <%- include("../partials/footer.ejs") %>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const addBookForm = document.getElementById("addBookForm");
            const loading = document.getElementById("add-loading");

            addBookForm.addEventListener("submit", function() {
                loading.style.display = "flex";
            });
        });
    </script>
</body>
